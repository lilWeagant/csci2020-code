<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.canvas.Canvas?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.fxml_draw_demo.HelloController">
    <center>
        <Canvas fx:id="canvas" width = "300" height="250"/>
    </center>
    <bottom>
        <Button BorderPane.alignment="CENTER" fx:id="drawButton" text = "Draw" onAction="#onDrawButtonClick"/>
    </bottom>
</BorderPane>

